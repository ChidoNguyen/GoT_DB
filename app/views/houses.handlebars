<h1 class="title">Houses</h1>
<table class="table is-bordered is-striped is-fullwidth">
    <thead> 
        <th>Name</th> 
        <th>Motto</th> 
        <th>Sigil</th>
        <th>Location</th>
        <th>Update</th> 
        <th>Delete</th>
    </thead> 
    <tbody> 
        {{#each houses}} 
        <tr> 
            <td>{{Name}}</td> 
            <td>{{Motto}}</td> 
            <td>{{Sigil}}</td> 
            <td>{{Location}}</td>
            <td><a href="/houses/{{ID}}">Update</a></td>
            <td><a onclick ="deleteHouse({{ID}})">Delete</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<br>

<div class="box">
    <div class="subtitle is-5">Add House</div>
    <form id="addHouses" action="/houses" method="post">
        
        <!-- Get Name -->
        <div class="field">
            <label class="label">Name</label>
            <input class="input" type="text" name="name" placeholder="Mormont">
        </div>

        <!-- Get Motto -->
        <div class="field">
            <label class="label">Motto</label>
            <input class="input" type="text" name="motto" placeholder="Here we stand">
        </div>

        <!-- Get Sigil -->
        <div class="field">
            <label class="label">Sigil</label>
            <input class="input" type="text" name="sigil" placeholder="Bear">
        </div>

        <!-- Get Location -->
        <div class="field">
            <label class="label">Location</label>
            <select class="input" name="location"> 
                {{#each locations}}
                <option value="{{ID}}">{{Name}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Submit -->
        <div class="field">
            <input class="button is-info" type="submit" value="Submit">
        </div>

    </form>
</div>
