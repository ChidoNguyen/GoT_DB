<h1 class="title">Locations</h1>
<table class="table is-bordered is-striped is-fullwidth">
    <thead> 
        <th>Name</th> 
        <th>Continent</th> 
        <th>Slavery</th>
        <th>Update</th>
        <th>Delete</th>
    </thead> 
    <tbody> 
        {{#each locations}} 
        <tr> 
            <td>{{Name}}</td> 
            <td>{{Continent}}</td> 
            <td>{{#if Slave}}Slavery{{else}}No Slavery{{/if}}</td>
            <td><a href="/locations/{{ID}}">Update</a></td>
            <td><a onclick ="deleteLocation({{ID}})">Delete</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<br>

<div class="box">
    <div class="subtitle is-5">Add Location</div>
    <form id="addLocation" action="/locations" method = "post">

        <!-- Get Name -->
        <div class="field">
            <label class="label">Name</label>
            <input class="input" type="text" name="name" placeholder="The Eyrie">
        </div>

        <!-- Get Continent -->
        <div class="field">
            <label class="label">Continent</label>
            <input class="input" type="text" name="continent" placeholder="Westeros">
        </div>

        <!-- Get Slavery or No -->
        <div class="field">
            <label class="label">Slavery</label>
            <label class="radio">
                <input class="radio" type="radio" name="slave" value="1"> Yes
                <input class="radio" type="radio" name="slave" value="0"> No
            </label>
        </div>

        <!-- Submit -->
        <div class="field">
            <input class="button is-info" type="submit" value="Submit">
        </div>

    </form>
</div>